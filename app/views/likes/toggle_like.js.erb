<% if @is_liked %>
$('#like_<%= @tweet.id%>').html("UnLike");
noty({text: 'Tweet was Liked', type: 'alert'});
var ch = parseInt($('#likes_count_<%= @tweet.id%>').text());
ch = ch+1;
$('#likes_count_<%= @tweet.id%>').text(ch);

<% else %>

$('#like_<%= @tweet.id%>').html("Like");
noty({text: 'Tweet was UnLiked', type: 'alert'});
var ch = parseInt($('#likes_count_<%= @tweet.id%>').text());
ch = ch-1;
$('#likes_count_<%= @tweet.id%>').text(ch);

<% end %>